

<div class="container">
  <div class="form-wrapper" style="width: 500px; margin: 0 auto;">
    <h2> <%= @experience.name %> </h2>
<h5> <%= @experience.description %> </h5>
<br>
<br>

    <%= simple_form_for :search, method: "get" do |f| %>
      <%= f.input :starts_at, as: :string, label: "Starts",required: false, input_html: {class: "datepicker"} %>
      <%= f.input :ends_at, as: :string, required: false, label: "Ends", input_html: {class: "datepicker"} %>
      <%= f.input :number_traveller, label: "How many person?", collection: 1..10, prompt: "select" %>
      <%= f.input :amount, label: "Total amount", disabled: true, required: false, hint: "$ #{@experience.price}  per person for an AMAZING sustainable experience" %>
      <br>
      <%= f.input :description, as: :text, label: "Comments", required: false %>

           NGO name :
           <br>
           <br>


      <%= f.button :submit, "Book", class: "btn btn-primary" %>
    <% end %>



  </div>
</div>

<br>

