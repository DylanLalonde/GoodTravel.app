 <%= simple_form_for [@experience, @booking] do |f| %>
    <%= f.input :start_date, as: :string, label: "Starts",required: false, input_html: {class: "datepicker"} %>
    <%= f.input :end_date, as: :string, required: false, label: "Ends", input_html: {class: "datepicker"} %>
    <%= f.input :number_traveller, label: "How many person?", collection: 1..10, prompt: "select" %>
    <%= f.input :amount, label: "Total amount", disabled: true, required: false, hint:" #{humanized_money_with_symbol(@experience.price)} per person for an AMAZING sustainable experience" %>
    <br>
    
    <%= f.input :description, as: :text, label: "Message to Host", required: false %>

    <%= f.input :selected_ngo, label: "Pick your NGO", collection: @ngos , prompt: "Select NGO", required: false %>

    <br>
    <br>


    <%= f.button :submit, "Book", class: "btn btn-primary btn-lg" %>
    <% end %>
