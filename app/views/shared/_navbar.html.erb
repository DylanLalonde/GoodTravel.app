<div class="<%= @current_page %> navbar-goodtravel" >
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-goodtravel-brand" do %>
    <%= image_tag "logo2.png", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-goodtravel-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Experiences", experiences_path, class: "navbar-goodtravel-item navbar-goodtravel-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-goodtravel-item">
        <div class="dropdown">
          <%= image_tag "https://www.placehold.it/10x10", class: "avatar dropdown-toggle", id: "navbar-goodtravel-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-goodtravel-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
      
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-goodtravel-item navbar-goodtravel-link" %>
      <%= link_to t(".sign_up", default: "Sign up"), new_user_registration_path, class: "navbar-goodtravel-item navbar-goodtravel-cta-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-goodtravel-item hidden-md hidden-lg white">
  <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-goodtravel-dropdown-menu">
  <% if user_signed_in? %>
        <li>
        <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
        <% end %>
        </li>
        </ul>
  <% else %>
      <li><%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-goodtravel-item navbar-goodtravel-link" %>
      <%= link_to t(".sign_up", default: "Sign up"), new_user_registration_path, class: "navbar-goodtravel-item navbar-goodtravel-cta-link" %>
    <% end %>
    </div>
  </div>
</div>

