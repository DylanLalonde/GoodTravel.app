<div class="info-window-container" >

  <div class="info-image-container">
     <%= cl_image_tag experience.photo, height: 125, width: 125, crop: :fill %>
  </div>
  <div class="info-details-container">
    <h4> <%= link_to experience.name, experience_path(experience), class: "link-text" %></h4>
    <p> <%= experience.description %> </p>
    <h6> $ <%= experience.price %> per day</h6>
  </div>
</div>
