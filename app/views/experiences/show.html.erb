      <% end %>
    </div>
    <div class="show-calendar-form-button">
      <button class="show-button-selected"></button> selected
      <br>
      <button class="show-button-available"></button> available
      <br>
      <button class="show-button-not-available"></button> not available
    </div>
    -->
  </div>

  <!-- Button trigger modal -->

  <!-- /.modal -->


  <div class="show-button-part">
    <%= link_to 'Booking', new_experience_booking_path(@experience), class: "btn show-btn-success btn" %>
    <br>
    <hr width="90%">
  </div>
  <div class="show-supported-ngos">
    <h4> Supported NGO's</h4>
    <h5> By booking this tour you support the following NGO's.
      Check out the total donnation meter <strong>here</strong>.
    </h5>

    <% @ngos.each do |ngo| %>
      <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
        <%= image_tag(ngo.photo) %>
      </button><br>



  <div> <!-- Modal -->
      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title" id="myModalLabel">
                <%= ngo.name %>
              </h4>
            </div>
            <div class="modal-body">
              <%= image_tag (ngo.photo) %>
                <br>
                <%= ngo.description %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">
                <%= link_to 'More Info' , "www.worldanimalprotection.com", target: '_blank' %>
              </button>
              <button type="button" class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Continue Booking</button>
            </div>
          </div>
          <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
      </div>
      <!-- /.modal -->
      <br>
    <% end %>
    <hr width="90%">
    <div class="show-location-part-with-map">
      <h4> Locations</h4>
      <h5> <%= @experience.address %></h5>
      <h5> <%= @experience.location.name %></h5>


      <div class="show-map-experience "id="map" ; data-markers="<%= @markers.to_json %>">
      </div>
    </div>
    <!-- /.modal-content -->
  <!-- Button trigger modal -->
  </div>

</div>

