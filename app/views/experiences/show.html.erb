
  <div class="show-header-button">
    <%= link_to 'Back to results', experiences_path(@experience), class: "btn btn-link" %>
  </div>

  <div class="show-container">
    <div class="show-image-display">
      <%= image_tag (cl_image_path @experience.photo, width: 200, height: 150, crop: :fill) , class:"show-image"%>
      <p class ="show-text-popular-design"> Popular </p>
    </div>

    <div class="show-location-info">
      <%= @experience.location.name %>
    </div>
    <div class="show-tour-frequency-infor">

      <i class="far fa-2x fa-clock"></i> Tour Duration: <%# <%= @experience.time %>
       <br>
      <i class="fas fa-2x fa-sync-alt"></i> Frequency:<%# <%= @experience.frequency %>
      <br>
      <i class="far fa-credit-card"></i> Price : <%= humanized_money_with_symbol(@experience.price) %>
    </div>



    <div class="show-experience-info">
      <h4> <%= @experience.name %></h4>
          <!--
          <p><%= @experience.smdescription %><p class="button">More...</p></p>
          <p class="content" id="expand-content"><%= @experience.lgdescription %></p>
          -->
          <div>
            <input type="checkbox" class="read-more-state" id="post-1" />
              <h5 class="read-more-wrap"><%= @experience.smdescription %><span class="read-more-target"> <%= @experience.lgdescription %></span></h5>
            <label for="post-1" class="read-more-trigger"></label>
          </div>

    </div>
    <div class="show-what-you-get">
      <h4> What do you get</h4>
      <h5> Enjoy a unique and unforgettable experience as you cruise through Amsterdam's beautiful historic canals and dine under the stars with culinary delights.</h5>
      <hr width="90%">
    </div>


    <div class="show-hour-part-design">
      <h4> Hours</h4>
      <h5> Hours
        Monday - Friday: 10.00am - 6.00pm <br>
        Saturday - Sunday: 09.00am - 7.00pm
      </h5>
    </div>

