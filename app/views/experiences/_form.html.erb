<div class ="container">
  <div class="row">
    <div class="col-sm-12 col-md-6 col-md-offset-3">
      <h1 class="form-experience-title">Add your experience</h1>
      <br>
      <%= simple_form_for(@experience) do |f| %>
      Tour Name: <%= f.input :name %>
      <%= f.input :category, prompt: 'select your category', collection: ["City tour","Food","Nature","Travel" ] %>
      Short Description: <%= f.input :smdescription, hint: '20 caracteres minimum' %>
      <%= f.input :lgdescription, as: :text, label: 'Extended Description:' %>
      <%#= f.input :duration, as: :datetime,%>
      <hr width="90%">
      <div class="form-experience-category-title"><p> Hours and Dates info</p>
        </div>
      <%= f.input :duration, as: :time, label: 'How long will be the duration?'%>
      <%#= f.input :duration, as: :time, label: 'end hours'%>
      <hr width="90%">
      <div class="form-experience-category-title"><p> Address info</p></div>
      <%= f.input :location, required: true, collection: @locations %>
      <%= f.input :address, required: true %>
      Tour Price:<%= f.input :price %>
      Upload a Photo: <%= f.input :photo, as: :hidden %>

      <br>
      <br>
      <%#= f.input :photo_cache, as: :hidden %>
      <%= f.submit class: 'form-experience-btn btn-primary btn-lg' %>
      <% end %>
      <br>


    </div>
  </div>
</div>

