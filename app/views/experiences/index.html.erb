<h1> index pages </h1>

<div class="index-wrapper">
  <div class="index-container">
    <div class="index-row">
      <div class="search-bar">
        <%= form_tag(experiences_path, method: :get) do %>
        <%= text_field_tag :query, nil, placeholder: "Search..." %>
        <%= submit_tag "Category", class: "btn btn-danger btn-xs" %>
        <% end %>
      </div>
    </div>

    <div class="row">
      <% @experiences.each do |experience| %>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="card-wrapper">
          <div class="card-image" style = "background-image: url(<%=experience.photo%>);">
            <!-- image in css -->
            <div class="card-category">
              <%#= experience.category %>
              <%= experience.name %>
              <!-- need experience-type in model, will put here. -->
            </div>
          </div>
          <div class="card-description">
            <h2>   <%= link_to experience.name, experience_path(experience), class: "link-text" %></h2>
            <h4> by <%= experience.host_info.name %> </h4>
            <h5>   <%= experience.location.name %> </h5>
            <h6> <%= experience.price %> eur </h6>

          </div>
        </div>
      </div>
      <% end %>
    </div>


  </div>
  <div id="map" data-markers="<%= @markers.to_json %>">
  </div>
</div>
