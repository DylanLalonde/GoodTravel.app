
<div class="container">
  <div class="row">
    <div class="payment-confirmation">

      <h1>Please confirm your booking!</h1>

      <p>Experience: <%= @booking.experience.name %> </p>
      <p>Number of people in your group: <%= @booking.number_traveller %> </p>
      <p>Starts at: <%= @booking.start_date %> </p>
      <p>Ends at: <%= @booking.end_date %> </p>
      <p>The NGO you've chosen to support is: <%= @booking.ngo.name %> </p>
      <p>This booking will donate <%= @booking.amount * 0.05 %> to <%= @booking.ngo.name %>!</p>
      <p>If you are ready to confirm your booking please pay now.</p>
      <p>Total payment due: <%= @booking.amount %> </p>

      <%= form_tag experience_booking_order_payments_path(@experience, @booking, @order) do %>
        <article>
          <label class="amount">
            <span>Total Price: <%= humanized_money_with_symbol(@order.amount) %></span>
          </label>
        </article>

        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-name="My Booking"
          data-email="<%= current_user.email %>"
          data-label="Checkout"
          data-description="Booking <%= @order.booking_sku %>"
          data-amount="<%= @order.amount_cents %>"
          data-currency="<%= @order.amount.currency %>"></script>
      <% end %>
      <br>
    </div>
  </div>
</div>
